<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts 
	PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.1.dtd" >
<struts>

	<package name="notice" extends="struts-default" namespace="/notice">
		<action name="list" class="cn.gdpu.action.NoticeAction" method="list">
			<result name="success">/WEB-INF/content/notice.jsp</result>
		</action>
		<action name="add" class="cn.gdpu.action.NoticeAction" method="add">
			<result name="success">/WEB-INF/content/noticeAdd.jsp</result>
		</action>
		<action name="save" class="cn.gdpu.action.NoticeAction" method="save">
			<result type="chain" name="success">list</result>
			<result name="error">/WEB-INF/content/noticeAdd.jsp</result>
		</action>
	</package>

</struts>    