<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts 
	PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.1.dtd" >
<struts>

	<package name="notice" extends="struts-default" namespace="/notice">
		<default-action-ref name="list" />
		<global-results>
			<result type="redirectAction" name="list">list</result>
			<result name="add">/WEB-INF/model/noticeAdd.jsp</result>
		</global-results>
		<action name="list" class="cn.gdpu.action.NoticeAction" method="list">
			<result name="success">/WEB-INF/model/notice.jsp</result>
		</action>
		<action name="add" class="cn.gdpu.action.NoticeAction" method="add"></action>
		<action name="save" class="cn.gdpu.action.NoticeAction" method="save"></action>
		<action name="modify" class="cn.gdpu.action.NoticeAction" method="modify"></action>
		<action name="del" class="cn.gdpu.action.NoticeAction" method="del"></action>
		<action name="detail" class="cn.gdpu.action.NoticeAction" method="detail">
			<result name="success">/WEB-INF/model/noticeDetail.jsp</result>
		</action>
	</package>
	<package name="post" extends="struts-default" namespace="/notice">
		<global-results>
			<result name="detail" type="redirectAction">detail?id=${id}</result>
		</global-results>
		<action name="addPost" class="cn.gdpu.action.PostAction" method="addPost"></action>
		<action name="delPost" class="cn.gdpu.action.PostAction" method="delPost"></action>
		<action name="modifyPost" class="cn.gdpu.action.PostAction" method="modifyPost">
			<result name="success">/WEB-INF/model/postModify.jsp</result>
		</action>
		<action name="updatePost" class="cn.gdpu.action.PostAction" method="updatePost"></action>
	</package>

</struts>    