<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<mapping resource="cn/gdpu/vo/User.hbm.xml" />
		<mapping resource="cn/gdpu/vo/Student.hbm.xml" />
		<mapping resource="cn/gdpu/vo/Duty.hbm.xml" />
		<mapping resource="cn/gdpu/vo/Notice.hbm.xml" />
		<mapping resource="cn/gdpu/vo/Post.hbm.xml" />

	</session-factory>
</hibernate-configuration>
