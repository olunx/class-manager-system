<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!-- Kissy Editor 插入本地图片action配置	-->
	
	<package name="kissy" extends="struts-default" >
		<action name="kissyUpload" class="cn.gdpu.action.KissyUploadAction" >
			<param name="savePath">/content/images/kissy</param>
			<result name="success">/content/kissy/kissyRes.jsp?status=0</result>
			<result name="error">/content/kissy/kissyRes.jsp?status=1</result>
		</action>
	</package>
</struts>